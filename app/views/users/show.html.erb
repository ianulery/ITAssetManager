<div class="level">
  <div class="level-left">
    <h3 class="title is-3">User</h3>
  </div>
  
  <div class="level-right">
    <div class="buttons">
      <%= link_to 'Edit', edit_user_path(@user), class: 'button' %>
      <%= link_to('Delete user', user_path(@user), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'button') unless @user == current_user %>
    </div>
  </div>
</div>

<hr />

<div class="block">
  <p>Name: <%= @user.name %></p>
  <p>Email: <%= @user.email if @user.email %></p>
</div>

<div class="block">
  <%= link_to 'Back to Users', users_path, class: 'button' %>
</div>
