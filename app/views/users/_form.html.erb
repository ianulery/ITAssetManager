<% if @user.errors.any? %>
  <div class="alert alert-warning">
    <strong>The record couldn't be saved for the following reasons:</strong> <%= @user.errors.full_messages.join('. ') %>.
  </div>
<% end %>

<%= form_for @user do |f| %>
  <div class="field is-horizontal">
    <div class="field-label">
      <%= f.label :name, 'Name', class: 'label' %>
    </div>
    <div class="field-body">
      <div class="field">
        <%= f.text_field :name, class: 'input' %>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label">
      <%= f.label :email, 'Email', class: 'label' %>
    </div>
    <div class="field-body">
      <div class="field">
        <%= f.text_field :email, class: 'input' %>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label">
      <%= f.label :password, 'Password', class: 'label' %>
    </div>
    <div class="field-body">
      <div class="field">
        <%= f.text_field :password, class: 'input' %>
      </div>
    </div>
  </div>

    <div class="field is-horizontal">
    <div class="field-label">
      <%= f.label :password_confirmation, 'Confirm Password', class: 'label' %>
    </div>
    <div class="field-body">
      <div class="field">
        <%= f.text_field :password_confirmation, class: 'input' %>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label"></div>
    <div class="field-body">
      <div class="field is-grouped">
        <p class="control">
          <%= f.submit 'Save', class: 'button is-primary' %>
        </p>
        <p class="control">
          <%= link_to 'Cancel', :back, class: 'button' %>
        </p>
      </div>
    </div>
  </div>  
<% end %>
