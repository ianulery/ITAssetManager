<div class="level">
  <div class="level-left">
    <h3 class="title is-3">Location</h3>
  </div>
  <div class="level-right">
    <div class="dropdown">
      <button class="button" aria-haspopup="true" aria-controls="dropdownMenuSizeButton3">
        <span>Action</span>
        <span class="icon is-small">
          <i class="fas fa-angle-down" aria-hidden="true"></i>
        </span>
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuSizeButton3" role="menu">
        <div class="dropdown-content">
          <%= link_to 'Add Equipment', new_device_path(location_id: @location.id), class: 'dropdown-item' %>
          <%= link_to 'Edit', edit_location_path(@location), class: 'dropdown-item' %>
          <%= link_to 'Delete', @location, method: :delete, confirm: 'Are you sure you want to delete this location?', class: 'dropdown-item' %>
        </div>
      </div>
    </div>
  </div>
</div>

<hr />

<div class="block">
  <p><strong>Name:</strong> <%= @location.name %></p>
</div>

<div class="block">
  <h5 class="title is-5">Notes</h5>
  <%= simple_format(@location.notes) %>
</div>

<div class="block">
  <h5 class="title is-5">Equipment at this location</h5>
  <table class="table device-datatable">
    <thead>
      <tr>
        <th>Asset Number</th>
        <th>Item</th>
        <th>Person</th>
        <th>Location</th>
        <th>Notes</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <%= render @location.devices %>
    </tbody>
  </table>
</div>

<div class="block">
  <%= link_to 'Back to Locations List', locations_path, class: 'button' %>
</div>
