<div class="level">
  <div class="level-left">
    <h3 class="title is-3">Location</h3>
  </div>
  
  <div class="level-right">
    <div class="buttons">
      <%= link_to 'Add Equipment', new_device_path(location_id: @location.id), class: 'button' %>
      <%= link_to 'Edit', edit_location_path(@location), class: 'button' %>
      <%= link_to 'Delete', @location, method: :delete, confirm: 'Are you sure you want to delete this location?', class: 'button' %>
    </div>
  </div>
</div>

<hr />

<div class="block">
  <p><strong>Name:</strong> <%= @location.name %></p>
</div>

<div class="block">
  <h5 class="title is-5">Notes</h5>
  <%= simple_format(@location.notes) %>
</div>

<div class="block">
  <h5 class="title is-5">Equipment at this location</h5>
  <table class="table device-datatable">
    <thead>
      <tr>
        <th>Asset Number</th>
        <th>Item</th>
        <th>Person</th>
        <th>Location</th>
        <th>Notes</th>
      </tr>
    </thead>
    <tbody>
      <%= render @location.devices %>
    </tbody>
  </table>
</div>

<div class="block">
  <%= link_to 'Back to Locations List', locations_path, class: 'button' %>
</div>
