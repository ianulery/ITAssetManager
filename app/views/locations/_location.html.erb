<tr id="<%= dom_id(location) %>">
  <td><%= link_to location.name, location, class: 'text-primary' %></td>
  <td class="device-count"><%= location.devices.count %></td>
  <td class="location-managers"><%= location.people.present? ? location.people.collect(&:name).join(', ') : 'None' %></td>
  <td>
    <div class="dropdown">
      <button class="button is-small dropdown-toggle" type="button" id="dropdownMenuSizeButton<%= location.id %>" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Action
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuSizeButton<%= location.id %>" role="menu">
        <div class="dropdown-content">
          <%= link_to 'View', location, class: 'dropdown-item' %>
          <%= link_to 'Edit', edit_location_path(location), class: 'dropdown-item' %>
          <%= link_to 'Delete', location, method: :delete, confirm: 'Are you sure you want to delete this location?', class: 'dropdown-item' %>
        </div>
      </div>
    </div>
  </td>
</tr>
