<div class="level">
  <div class="level-left">
    <h3 class="title is-3">Device</h3>
  </div>
  <div class="level-right">
    <div class="dropdown">
      <div class="dropdown-trigger is-hoverable">
        <button class="button" aria-haspopup="true" aria-controls="dropdownMenuSizeButton3">
          <span>Action</span>
          <span class="icon is-small">
            <i class="fas fa-angle-down" aria-hidden="true"></i>
          </span>
        </button>
      </div>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuSizeButton3" role="menu">
        <div class="dropdown-content">
          <%= link_to 'Edit', edit_device_path(@device), class: 'dropdown-item' %>
          <%= link_to 'Delete', @device, method: :delete, confirm: 'Are you sure you want to delete this record?', class: 'dropdown-item' %>
        </div>
      </div>
    </div>
  </div>
</div>

<hr />

<div class="block">
  <p><strong>Asset Number:</strong> <%= @device.asset_number %></p>
  <p><strong>Item:</strong> <%= @device.item %></p>
  <p><strong>Person:</strong> <%= link_to(@device.person.name, @device.person, class: 'text-muted') if @device.person %></p>
  <p><strong>Location:</strong> <%= link_to @device.location.name, @device.location, class: 'text-muted' %></p>
  <p><strong>Licenses:</strong> <%= raw @device.licenses.collect { |l| link_to(l.item, l, class: 'text-muted') }.join(', ') %></p>
<p><strong>AnyDesk ID:</strong> <%= link_to(@device.anydesk_id, "anydesk:#{@device.anydesk_id}", class: 'text-muted') if @device.anydesk_id.present? %></p>
</div>

<div class="block">
  <h5 class="title is-5">Notes</h5>
  <%= simple_format @device.notes %>
</div>

<div class="block">
  <%= link_to 'Back to Device List', devices_path, class: 'button' %>
</div>
