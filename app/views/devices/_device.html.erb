<tr>
  <td><%= device.asset_number %></td>
  <td><%= link_to device.item, device, class: 'text-primary' %></td>
  <td><%= link_to_unless_current(device.person.name, device.person, class: 'text-muted') if device.person %></td>
  <td><%= link_to_unless_current device.location.name, device.location, class: 'text-muted' %></td>
  <td><%= truncate device.notes %></td>
  <td>
    <div class="dropdown">
      <button class="button is-small dropdown-toggle" type="button" id="dropdownMenuSizeButton<%= device.id %>" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Action
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuSizeButton<%= device.id %>" role="menu">
        <div class="dropdown-content">
          <%= link_to 'View', device, class: 'dropdown-item' %>
          <%= link_to 'Print Asset Label', asset_label_device_path(device, format: 'pdf'), class: 'dropdown-item' %>
          <%= link_to 'Edit', edit_device_path(device), class: 'dropdown-item' %>
          <%= link_to 'Delete', device, method: :delete, confirm: 'Are you sure you want to delete this device?', class: 'dropdown-item' %>
        </div>
      </div>
    </div>
  </td>
</tr>
