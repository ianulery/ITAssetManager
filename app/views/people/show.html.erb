<div class="level">
  <h3 class="title is-3">Person</h3>
  <div class="dropdown">
    <button class="button dropdown-toggle" type="button" id="dropdownMenuSizeButton3" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      Action
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuSizeButton3" role="menu">
      <%= link_to 'Send Inventory Email', send_inventory_email_person_path(@person), class: 'dropdown-item' %>
      <%= link_to 'Add Device', new_device_path(person_id: @person.id), class: 'dropdown-item' %>
      <%= link_to 'Edit', edit_person_path(@person), class: 'dropdown-item' %>
      <%= link_to 'Delete', @person, method: :delete, confirm: 'Are you sure you want to delete this person?', class: 'dropdown-item' %>
    </div>
  </div>
</div>

<hr />

<div class="block">
  <p><strong>Name:</strong> <%= @person.name %></p>
  <p><strong>E-Mail Address:</strong> <%= @person.email %></p>
</div>

<div class="block">
  <h5 class="title is-5">Devices</h5>
  <table class="table device-datatable">
    <thead>
      <tr>
        <th>Asset Number</th>
        <th>Item</th>
        <th>Person</th>
        <th>Location</th>
        <th>Notes</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <%= render @person.devices %>
    </tbody>
  </table>
</div>

<div class="block">
  <%= link_to 'Back to People List', people_path, class: 'button' %>
</div>
