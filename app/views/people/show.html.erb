<div class="level">
  <div class="level-left">
    <h3 class="title is-3">Person</h3>
  </div>
  
  <div class="level-right">
    <div class="buttons">
      <%= link_to 'Add Device', new_device_path(person_id: @person.id), class: 'button' %>
      <%= link_to 'Edit', edit_person_path(@person), class: 'button' %>
      <%= link_to 'Delete', @person, method: :delete, confirm: 'Are you sure you want to delete this person?', class: 'button' %>
    </div>
  </div>
</div>

<hr />

<div class="block">
  <p><strong>Name:</strong> <%= @person.name %></p>
</div>

<div class="block">
  <h5 class="title is-5">Devices</h5>
  <table class="table device-datatable">
    <thead>
      <tr>
        <th>Asset Number</th>
        <th>Item</th>
        <th>Person</th>
        <th>Location</th>
        <th>Notes</th>
      </tr>
    </thead>
    <tbody>
      <%= render @person.devices %>
    </tbody>
  </table>
</div>

<div class="block">
  <%= link_to 'Back to People List', people_path, class: 'button' %>
</div>
